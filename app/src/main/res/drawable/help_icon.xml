<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue square.-->

    <!-- The middle layer is green circle.-->

    <item>
        <shape android:shape="ring">
            <size
                android:width="50dp"
                android:height="50dp" />

            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <!-- The top layer is red ring.-->
    <item
        android:drawable="@drawable/circle_cropped"
        android:left="5dp"
        android:top="5dp"

        android:right="5dp"
        android:bottom="5dp">
        <shape
            android:dither="true"
            android:shape="ring"
            android:thickness="25dp"
            android:useLevel="false">
            />
        </shape>
    </item>
</layer-list>